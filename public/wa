    <script>
      function sendWhatsAppMsg() {
        console.log('in sendWhatsAppMsg')
        var phone = document.getElementById("phone").value;
        var text = document.getElementById("msgText").value;
        var service = document.getElementById("service").value;

        if (service === 'Welcome') 
            text = `Welcome to Varsha Women Hostel,
%0awww.varshahostel.com
%0a
%0aRazzak Garden:
%0aVarsha Women Hostel, Razzak Garden
%0ahttps://maps.app.goo.gl/xc4hsgXtuEY4fwBt8
%0a
%0aJai Nagar:
%0ahttps://maps.app.goo.gl/VGSbWNvYt5WonscL9
%0a
%0a
%0a9962 34 7110
%0a9444 34 0123`;

        if (service === 'RegisterText')
          text = `Welcome to Varsha hostel. 
          %0a
          %0aPlease register at varshahostel.com/RazzakGarden/register.html
          %0a
          %0aFill your phone number, emergency contact number, etc.
          %0aPlease click 'Add to contact' to store this number and enable the link above.`;

        var url = "https://wa.me/"+phone+"?text="+text;

        console.log('url='+url);
        window.open(url, '_blank').focus();
      }
    </script>
